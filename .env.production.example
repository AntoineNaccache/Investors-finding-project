# Production Environment Configuration
# Copy this file to .env.production and update with your production values
# ⚠️ NEVER commit this file with real values!

# === LLM Provider API Keys ===
GROQ_API_KEY=your_production_groq_api_key
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Optional LLM providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

# === Database ===
POSTGRES_URL=postgres://prod_user:secure_password@production-db.example.com:5432/investors_prod

# === Authentication ===
BETTER_AUTH_SECRET=use_different_secret_than_staging
BETTER_AUTH_URL=https://yourdomain.com

# === Tools ===
EXA_API_KEY=

# === E2B Sandbox (for secure data processing) ===
E2B_API_KEY=

# === Environment ===
NODE_ENV=production
NO_HTTPS=0

# === Redis (recommended for production) ===
REDIS_URL=redis://production-redis.example.com:6379

# === OAuth (production credentials) ===
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# === File Storage (production) ===
FILE_STORAGE_TYPE=s3
FILE_STORAGE_PREFIX=uploads
FILE_STORAGE_S3_BUCKET=investors-prod-uploads
FILE_STORAGE_S3_REGION=us-east-1
FILE_STORAGE_S3_PUBLIC_BASE_URL=https://cdn.yourdomain.com

# AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# === Monitoring & Analytics (optional) ===
# SENTRY_DSN=
# ANALYTICS_ID=

# === Rate Limiting ===
# RATE_LIMIT_ENABLED=1
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000
